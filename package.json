{
  "name": "vanillajs-helpers",
  "version": "1.2.0",
  "description": "Collection of convenience code snippets (helpers) that aims to make it a little easier to work with vanilla JS",
  "author": "Toke Voltelen",
  "license": "MIT",
  "keywords": [
    "vanilla js",
    "helpers",
    "event",
    "camelCase",
    "isObject",
    "capitalize",
    "hash"
  ],
  "scripts": {
    "prepublishOnly": "npm run build",
    "test": "cross-env TS_NODE_PROJECT=./test nyc mocha --compilers ts:ts-node/register ./test/*.spec.ts",
    "build": "tsc && tsc -p ./cjs && tsc -p ./es5",
    "coveralls": "cat ./coverage/lcov.info | node node_modules/.bin/coveralls",
    "coveralls:win": "type ./coverage/lcov.info | node node_modules/.bin/coveralls",
    "docs": "typedoc --out ./docs --exclude \"**/vanillajs-helpers/+(?)/**/*.*\" --mode modules --tsconfig ./tsconfig.json --theme minimal --ignoreCompilerErrors --excludePrivate --excludeNotExported --stripInternal --suppressExcessPropertyErrors --suppressImplicitAnyIndexErrors ./",
    "clean": "node ./tasks/clean.js",
    "lint": "tslint -p ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://Tokimon@github.com/Tokimon/vanillajs-helpers.git"
  },
  "bugs": {
    "url": "https://github.com/Tokimon/vanillajs-helpers/issues"
  },
  "homepage": "https://github.com/Tokimon/vanillajs-helpers#readme",
  "devDependencies": {
    "@types/chai": "^4.0.10",
    "@types/chai-as-promised": "^7.1.0",
    "@types/mocha": "^2.2.44",
    "@types/sinon-chai": "^2.7.29",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "coveralls": "^3.0.0",
    "cross-env": "^5.1.1",
    "fs-extra": "^5.0.0",
    "globby": "^7.1.1",
    "mocha": "^4.0.1",
    "nyc": "^11.3.0",
    "sinon": "^4.1.3",
    "sinon-chai": "^2.14.0",
    "ts-node": "^4.0.1",
    "tslint": "^5.8.0",
    "tslint-config-semistandard": "^6.0.4",
    "typedoc": "^0.9.0",
    "typescript": "^2.6.2"
  },
  "nyc": {
    "include": [
      "*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text",
      "lcov"
    ],
    "sourceMap": true,
    "instrument": true,
    "report-dir": "./coverage"
  }
}
