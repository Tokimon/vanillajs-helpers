{
  "name": "vanillajs-helpers",
  "version": "2.0.3",
  "description": "Collection of convenience code snippets (helpers) that aims to make it a little easier to work with vanilla JS",
  "author": "Toke Voltelen",
  "license": "MIT",
  "keywords": [
    "vanilla js",
    "helpers",
    "event",
    "camelCase",
    "isObject",
    "capitalize",
    "hash"
  ],
  "scripts": {
    "prepublishOnly": "npm run build",
    "test": "cross-env TS_NODE_PROJECT=./test/tsconfig.json nyc mocha --require ts-node/register --reporter progress ./test/*.spec.ts",
    "build": "tsc -p ./ts && tsc -p ./cjs && tsc -p ./es5",
    "coveralls": "cat ./coverage/lcov.info | node node_modules/.bin/coveralls",
    "coveralls:win": "type ./coverage/lcov.info | node node_modules/.bin/coveralls",
    "docs": "typedoc --options ./typedoc.json ./ts",
    "clean": "node ./tasks/clean.js",
    "lint": "tslint -p ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://Tokimon@github.com/Tokimon/vanillajs-helpers.git"
  },
  "bugs": {
    "url": "https://github.com/Tokimon/vanillajs-helpers/issues"
  },
  "homepage": "https://github.com/Tokimon/vanillajs-helpers#readme",
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/chai-as-promised": "^7.1.0",
    "@types/mocha": "^5.2.6",
    "@types/sinon-chai": "^3.2.2",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "codecov": "^3.2.0",
    "coveralls": "^3.0.3",
    "cross-env": "^5.2.0",
    "fs-extra": "^7.0.1",
    "globby": "^9.1.0",
    "mocha": "^6.0.2",
    "nyc": "^13.3.0",
    "sinon": "^7.3.1",
    "sinon-chai": "^3.3.0",
    "ts-node": "^8.0.3",
    "tslint": "^5.14.0",
    "tslint-config-semistandard": "^7.0.0",
    "typedoc": "^0.14.2",
    "typedoc-plugin-markdown": "^1.1.27",
    "typescript": "^3.3.4000"
  },
  "nyc": {
    "include": [
      "ts/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text",
      "json",
      "lcov"
    ],
    "sourceMap": true,
    "instrument": true,
    "report-dir": "./coverage"
  },
  "dependencies": {}
}
