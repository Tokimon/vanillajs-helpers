{
  "compilerOptions": {
    "module": "es6",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "target": "es2017",
    "lib": ["es5", "es6", "dom"],
    "moduleResolution": "node",
    "allowJs": false,
    "outDir": ".",
    "strictNullChecks": true
  },

  "include": [
    "./*.ts"
  ],

  "exclude": [
    "node_modules",
    "./test/**/*.ts"
  ]
}
